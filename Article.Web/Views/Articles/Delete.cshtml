@model ArticleDTO

<form asp-action="Delete">
    <div class="container border p-3">
        <h1 class="text-black text-center">Delete Article</h1>
        <input asp-for="Id" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Title" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Content</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Content" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

